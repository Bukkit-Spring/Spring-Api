#数据源
spring.datasource.default.type=com.zaxxer.hikari.HikariDataSource
spring.datasource.default.jdbc-url=jdbc:mysql://localhost:3306/rpg?useUnicode=true&useUnicode=true&characterEncoding=UTF-8&serverTimezone=Asia/Shanghai&useSSL=false&autoReconnect=true&failOverReadOnly=false
spring.datasource.default.username=
spring.datasource.default.password=
spring.datasource.default.driver-class-name=com.mysql.jdbc.Driver
##等待连接池分配连接的超时时间 30s
spring.datasource.default.hikari.connection-timeout=30000
#最小连接数
spring.datasource.default.hikari.minimum-idle=20
#最大连接数
spring.datasource.default.hikari.maximum-pool-size=80
#自动提交
spring.datasource.default.hikari.auto-commit=true
#连接超时时间 10m
spring.datasource.default.hikari.idle-timeout=600000
#连接池名称
spring.datasource.default.hikari.pool-name=DataSourceHikariCP1
#开启监控
spring.datasource.default.hikari.register-mbeans=true
#连接的生命时长 超时并且没有被使用则被释放 30m
spring.datasource.default.hikari.max-lifetime=1800000
#连接测试用语句
spring.datasource.default.hikari.connection-test-query=SELECT 1

